{
    "compilerOptions": {
        /* Basic Options */
        "target": "es5",
        "module": "commonjs",
        "outDir": "./dist",
        "skipLibCheck": true,
        "jsx": "react",
        /* Strict Type-Checking Options */
        "strict": true,
        "esModuleInterop": true,
        /* Source Map Options */
        "sourceRoot": "./src",
        "inlineSourceMap": true,
    },
    "exclude": [
        "./node_modules/",
    ],
}